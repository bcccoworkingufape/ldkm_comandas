<resources>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrincipal</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>


    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="AppTheme.Principal">
        <item name="colorAccent">@color/colorPrincipal</item> <!-- Whatever color you want-->
    </style>

    <style name="ColorTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorTexto</item>
    </style>

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrincipal</item>
        <item name="colorPrimaryDark">@color/colorPrincipalDark</item>
        <item name="colorAccent">@color/colorPrincipal</item>
    </style>


</resources>
